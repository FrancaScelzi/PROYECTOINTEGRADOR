<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <%- include('./partials/head') %>

  <body>
    <% if( user.log ){ %>
      <%- include('./partials/headerLogueado.ejs') %>
      <%} else { %>
      <%- include('./partials/header.ejs') %>
    
      <% } %>
    <!-- Novedades -->

    <div class="container products-wrapper">
      <div class="row">
        <% if( user.log ){ %>
          <div class="col-12">
            <h2 class="products-title text-center">Bienvenid@ <%= user.name %> </h2>
          </div>
        
        <%}%>   
        <div class="col-12">
          <h2 class="products-title">Resultados de <em>"<%= result %>"</em></h2>
        </div>

        <% if (respuesta != '') { %>
          <h2 style='color:red'><%= respuesta %> '<%= result %>'</h2>
        <% } %>

       
        <% if (respuesta == "") { %>
         <% for (const product of products) { %>
          <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
              <a href="/product/detail/<%= product.id %> ">
                <figure class="product-box_image">
                  <img src= "/images/products/<%=product.wine_image %>" alt="">
                </figure>
                <article class="product-box_data">
                  <h2><%= product.wine_name %></h2>
                  <p><%= product.wine_type %> - <%= product.wine_variety %></p>
                  <p><%= product.wine_year %> </p>
                  <p><a style="text-decoration-line: underline !important;" href='/users/<%= product.user.id %> '>AÃ±adido por <%= product.user.name + ' ' + product.user.lastname%> </a></p>
                </article>
              </a>
            </section>
          </div>
        <%}%>
        <% } %>
        
      </div>
    </div>

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
  </body>
</html>
