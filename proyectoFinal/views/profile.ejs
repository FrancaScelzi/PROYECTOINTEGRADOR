<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>

	<%- include('./partials/headerLogueado') %>
	
	
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= locals.img  %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= locals.name%> <%= locals.lastname%> 
						<a href="/users/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>361 seguidores</li>
						<li>129 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->
	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for (const product of productos) { %>
				<div class="col-12 col-sm-6 col-lg-3">
				  <section class="product-box">
					<a href="/product/<%= product.id %> ">
					  <figure class="product-box_image">
						<img src=<%=product.img %> alt="cafetera moulinex">
					  </figure>
					  <article class="product-box_data">
						<h2><%= product.name %></h2>
						<p><%= product.type %> - <%= product.variety %>  - <%= product.bodega %>  </p>
						<p>Comentarios: 12</p>
					  </article>
					</a>
				  </section>
				</div>
			  <%}%>
		</div>
	</div>
	<!-- /Mis productos -->


	   <!-- footer -->
	   <%- include('partials/footer') %>
	   <!-- /footer -->
</body>	
</html>