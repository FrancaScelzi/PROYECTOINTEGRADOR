<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>	
	<% if( user.log ){ %>
			<%- include('./partials/headerLogueado.ejs') %>
			<%} else { %>
			<%- include('./partials/header.ejs') %>

			<% } %>
	<div class="container products-wrapper">
		<div class="row">

		

		 
			<% if( user.log ){ %>
			<div class="col-12">
				<h2 class="products-title text-center">Bienvenid@ <%= user.name %> </h2>
			</div>

			<%}%>   
			<div class="col-12">
				<h2 class="products-title">Agregar Producto</h2>
			</div>
		</div>
	</div>
	<!-- Novedades -->
	<div class="container">
		<div class="row justify-content-md-center">
			<form class="register-form col-6" action="/product/product-add" method="POST" enctype="multipart/form-data">
				<label for="">Nombre:</label>
				<input type="text" name="wineName" placeholder="">
				<label for="">Tipo:</label>
				<input type="text" name="wineType" placeholder="">
				<label for="">Descripción:</label>
				<input type="text" name="wineDescription" placeholder="">
				<label for="">Variedad:</label>
				<input type="text" name="wineVariety" placeholder="">
				<label for="">Año:</label>
				<input type="number" name="wineYear" placeholder="">
				<label for="">Imagen:</label>
				<input type="file" name="wineImage" placeholder="">
				<button type="submit" class="btn-outline-dark">Enviar</button>
			</form>
		</div>
	</div>


	<!-- footer -->
	<%- include('partials/footer') %>
			<!-- /footer -->

</body>

</html>