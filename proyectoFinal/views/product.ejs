<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<% if( user.log ){ %>
		<%- include('./partials/headerLogueado.ejs') %>
		<%} else { %>
		<%- include('./partials/header.ejs') %>
	  
		<% } %>
	

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"> <%= products.wine_name %> </h2>
			<p class="product-detail-description">
				<% if (user.id== products.user_id) { %>
				<a href="/product/product-edit/<%= products.id %> ">Editar</a>
				<form action="/product/delete/<%= products.id %>" method="POST">
					<button type="submit"> <i class="fa fa-trash" aria-hidden="true"></i></button>
				</form>
				
				<% } %>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">


					<img src="/images/products/<%=products.wine_image %>"  alt="" class="product-detail-img">

					<p class="product-detail-description">
						<%= products.wine_description %>
					</p>
					
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">

						<% for (let i = 0; i < products.comment.length; i++) { %>
						<%	const user = products.comment[i]; %>



						<article>
							<img src="/images/profilePicture/<%= user.user.img  %>" alt="Imagen de <%= user.user.name %>">
							<div class="data">
								<p class="user">
									<strong> <a href="/users/<%= user.user_id %>"><%= user.user.name %>: </a> </strong>
										<%= user.texto_comentario %></p>
							</div>
						</article>
						<% } %>


					</section>
					<form class="form" action="/" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="btn-outline-dark"
							onclick="alert('¡Tu comentario ha sido enviado con éxito!')">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->

</body>

</html>